<% if (theme.disqus_shortname){ %>
<script>
  var disqus_shortname = '<%= theme.disqus_shortname %>';
  <% if (page.permalink){ %>
  var disqus_url = '<%= page.permalink %>';
  <% } %>
  (function(){
    if(document.getElementById("disqus_thread")!=null){
      $.ajax({
        url:'//' + disqus_shortname + '.disqus.com/<% if (page.comments) { %>embed.js<% } else { %>count.js<% } %>',
        dataType:'script',
        timeout: 3000
      })
      .fail(function(jqxhr, settings, exception) {
        document.getElementById("disqus_thread").innerHTML='<font style="color:LightGray;">👉 评论需翻墙！</font>';
      });
    }
  })();
</script>
<% } %>